# basic settings
autodetach on
crlf off
startup_message off
vbell off
defutf8 on
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8

defscrollback 10000

# status line
hardstatus alwayslastline "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d %{=b wm}%c"

# escape ^Aa
bind n screen
# bind h prev
# bind j next
bind l windowlist

screen 1
screen 0

bind j focus down
bind k focus up
# bind -c REGION j focus down
# bind -c REGION k focus up
bind -c REGION 0 remove
bind -c REGION 1 only
bind -c REGION 2 split
bind -c REGION 3 split -v
# bind -c REGION } resize +2
# bind -c REGION { resize -2
bind w command -c REGION

bind u encoding utf8
bind e encoding euc

# XXX: ignore window resize
termcapinfo xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
