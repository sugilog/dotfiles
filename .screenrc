##################################################
### basic settings
##################################################
autodetach on
crlf off
startup_message off
vbell off

## env for utf8
# defutf8 on
# defkanji utf-8
# defencoding utf-8
# encoding utf-8 utf-8
## env for euc
defkanji euc
defencoding euc
encoding euc euc


##################################################
### status line settings
##################################################
hardstatus alwayslastline "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d %{=b wm}%c"

##################################################
### scroll settings
##################################################
defscrollback 10000

# enable to scroll by mouse or keyboard
termcapinfo xterm* ti@:te@


##################################################
### keybind settings
##################################################
# escape ^Aa
bind n screen
bind l windowlist

screen 1
screen 0

bind j focus next
bind k focus prev
bind -c REGION 0 remove
bind -c REGION 1 only
bind -c REGION 2 split
bind -c REGION 3 split -v
bind w command -c REGION

bind u encoding utf8
bind e encoding euc

