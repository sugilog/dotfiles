[user]
  name = sugilog
  email = sugilog@gmail.com
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  pager = true
[alias]
  myclone = "!f(){ git clone --template=$HOME/dotfiles/git-template/ $@; }; f"
  co = checkout
  a = add
  s = status
  l = log
  c = commit
  done = tag -f 'latest' origin/master
  read = log -p --reverse 'latest'..origin/master
  info = remote -v
  bclean = !git branch --merged | grep -vE '^\\*|master$|release$' | xargs git branch -d
[core]
  editor = nvim
  quotepath = false
[github]
  user = sugilog@gmail.com
[pager]
  log  = less
  show = cat
  diff = less
  branch = cat
[diff]
  compactionHeuristic = true
  colorMoved = dimmed_zebra
[diff "sjis"]
  textconv=iconv -f sjis -t utf-8
[ghq]
  root=~/workspace/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
